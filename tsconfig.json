{
  "compileOnSave": true,
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "experimentalDecorators": true,
    "jsx": "react",
    "skipLibCheck": true
  },
  "include": [
    "gulpfile.ts",
    "webpack.config.ts",
    "src/**/*.ts*",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
